include ../_auto-generated/_-all
#batch-edit-dialog.md-dialog-container()
    md-dialog(aria-label="Batch Edit dialog")
        md-toolbar
            .md-toolbar-tools
                h2 Batch Edit
        md-dialog-content(layout-padding)
            .batch-form(ng-if="isBatchEditActive()")
                .pet-data-form(ng-controller="petFormController")
                    //.batch-edit-list(ng-if="isBatchMode()")
                    //    .batch-edit-list__content
                    //        .pet-thumbnail(ng-repeat="pet in $parent.selectedPetsDataCollection")
                    //            .pet-thumbnail__placeholder(ng-style!="background:url('{{pet.images.val[0]}}')")
                    .fields
                        .field(class="field--{{propData.key}}", ng-repeat="propData in properties", ng-if="isEditableByBatch(propData)")
                            .auto-input
                    .nav
                        md-input-container
                            md-button.btn-submit.md-primary.md-raised(ng-click='savePet()') Save
                            md-button.btn-remove.md-warn.md-raised(ng-click='deletePet()') Delete
                            md-button.btn-remove.md-clear.md-raised(ng-click='clearPetData()') Clear
