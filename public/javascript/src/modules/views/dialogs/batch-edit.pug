include ../_auto-generated/_-all
#batch-edit-dialog.md-dialog-container()
    md-dialog(aria-label="Batch Edit dialog")
        md-toolbar
            .md-toolbar-tools
                h2 Batch Edit
                span(flex)
                md-button.md-icon-button(ng-click="close()")
                    md-icon.material-icons close
        md-dialog-content(layout-padding)
            .batch-form(ng-if="isBatchEditActive()" ng-controller='formController')
                .fields
                    .field(class="field--{{propData.key}}", ng-repeat="propData in batchProperties")
                        .auto-input
                .nav
                    md-input-container
                        md-button.btn-submit.md-primary.md-raised(ng-click='save()') Save
                        md-button.btn-remove.md-warn.md-raised(ng-click='delete() && close()') Delete
